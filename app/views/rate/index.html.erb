<div class="jumbotron">
<h1>Restruaunt Ratings</h1>
<%= form_for Ratings.new, url: '/rate', :html => {:role => "form", :class => "form-horizontal"} do |f| %>
		Title: <%= f.text_field :title %>
		Rating 1 - 5: <%= f.number_field( :rating, options = {:min => 1, :max => 5}) %><br>
		Review: <%= f.text_area :review %><br>
		<%= f.submit 'Share' %>
<% end %>
</div>

<% @ratings.each do |rating| %>
	<div class="review">
		<h2><%= rating.title.capitalize %></h2>
		<p>Rating: <%= rating.rating %> <span class="glyphicon glyphicon-star">Review</span></p>
		<p><%= rating.review %></p>
	</div>
<% end %>